<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mypc.bankingapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/banklogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/banklogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_white">
        <activity android:name=".Payment_status"></activity>
        <activity
            android:name="com.mypc.bankingapp.splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mypc.bankingapp.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.mypc.bankingapp.user_list"
            android:label="Banking System"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.mypc.bankingapp.user_data"
            android:label="User Details"
            android:parentActivityName="com.mypc.bankingapp.user_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.mypc.bankingapp.sendtouser"
            android:label="Transfer Money"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.mypc.bankingapp.history_list"
            android:label="Transactions"
            android:parentActivityName="com.mypc.bankingapp.user_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>